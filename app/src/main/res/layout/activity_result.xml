<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="77dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_result_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_result_name"
        android:layout_below="@+id/txt_result_name"
        android:layout_marginTop="64dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_result_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_result_age"
        android:layout_centerVertical="true"
        android:text="TextView" />
</RelativeLayout>